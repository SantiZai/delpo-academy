---
import { Image } from 'astro:assets';

import delpoisback from "../assets/delpoisback.svg"

import { getI18N } from '../i18n';

const {currentLocale} = Astro
const i18n = getI18N({currentLocale})

const {DESCRIPTION_1, DESCRIPTION_2, DESCRIPTION_3} = i18n
---

<section class="w-screen">
    <div class="w-3/4 mx-auto py-14 flex flex-col items-center gap-10 text-pretty">
        <Image src={delpoisback} alt={"Delpo is back"} />
        <div class="w-full flex flex-col gap-4 text-lg">
            <p set:html={DESCRIPTION_1} />
            <p set:html={DESCRIPTION_2} />
            <p set:html={DESCRIPTION_3} />
        </div>
    </div>
</section>

<style>
    section {
        background: linear-gradient(to bottom, white 50%, #c3c3c3);
    }
</style>